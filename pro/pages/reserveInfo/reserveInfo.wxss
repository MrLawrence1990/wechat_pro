/* pages/reserveInfo/reserveInfo.wxss */

.reserveInfo {
  padding: 12rpx;
  height: 360rpx;
}

.reserveInfo view {
  width: 100%;
  height: 100%;
}

.reserveInfo view>image {
  width: 100%;
  height: 100%;
}

.reserve-form {
  text-align: center;
}

.reserve-form input {
  padding: 16rpx 0;
  font-size: 28rpx;
  text-align: center;
  border-bottom: 1px solid #ccc;
  margin: 0 70rpx;
}

button.reserve {
  position: absolute;
  bottom: 0;
  width: 90%;
  left: 50%;
  transform: translate(-50%);
  margin-bottom: 12rpx;
  color: #fff;
  border: none;
  background: #dd514c;
  font-size: 30rpx;
}
